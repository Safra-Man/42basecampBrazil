#include <unistd.h>

void	ft_is_negative(int n)
{
	n = 0;

	//Longo, porém didático
	if (n < 0)
	{
		write(1, "N", 1);	//nums negativos
	}
	else
	{
		write(1, "P", 1);	//0 e nums positivos
	}
	
	//Eficiente, porém complexo
	//write(1, (n < 0 ? "N" : "P"), 1);
	
	/* Operador Ternário */
	// =SE(A3 = 10; 100 ;  0 )
	//    ( n < 0 ? "N" : "P")
	//
	//	Em outras linguagens o 0 e o NULL são diferentes (ex: JavaScipt)
	//	NULL	=> o produto não está na lista de vendidos
	//	0		=> o produto é vendido, mas tem estoque 0
}