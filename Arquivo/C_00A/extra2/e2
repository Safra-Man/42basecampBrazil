#include <unistd.h>

// Operadores LÃ³gicos:
// Operador OU => ||
// Operador E  => &&

void	alfabeto_VOGAL(void)
{
	char c;

	c = 'a';
	while (c <= 'z')
	{
		if(c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u')
		{
			c = c - 32;
			write(1, &c, 1);
			c = c + 32;
		}
		else
		{
			write(1, &c, 1);
		}
		c++;
	}
}
	